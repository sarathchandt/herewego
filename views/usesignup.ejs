<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href=".\stylesheet\assets\css\main.css">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
  <title>Hello, world!</title>
</head>

<body>


  <section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
      <div class="row">

      </div>
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center text-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                  <!-- <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p> -->
                  <div class="col-md-10 col-lg-6 col-xl-7 d-flexalign-items-center order-1 order-lg-2 ">

                    <img src="./images/users/here we go-logos_transparent.png" class="img-fluid   " alt="Sample image">

                  </div>

                  <form class="mx-1 mx-md-4" action="/signup" method="post">

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="text" name="name" id="form3Example1c"  minlength="2" class="form-control" required/>
                        <label class="form-label" for="form3Example1c">Your Name</label>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="email" name="email" id="form3Example3c" class="form-control" required />
                        <label class="form-label" for="form3Example3c">Your Email</label>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="password" name="pass" id="pass"  minlength="9" class="form-control"  required/>
                        <label class="form-label" for="form3Example4c" >Password</label>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="password" name="rpassword" id="rpass" minlength="9" class="form-control d-inline"  onkeyup="validatepass()"  required  /> 
                        <label class="form-label" name="rpassword" for="form3Example4cd" >Repeat your password</label>
                       
                      </div>
                    </div>
                    <% if(response.status==false){ %>
                      <h6 class="text-warning">please confirm your password</h6>
                      <% } %>
                        <% if(response.user==false){ %>
                          <h6 class="text-warning">This email already registered. Please try with another</h6>
                          <% } %>
                            <% if(response.isotp==false){ %>
                              <h6 class="text-danger">Invalid otp</h6>
                              <% } %>
                                <div class="form-check d-flex justify-content-center mb-5">
                                  <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" required/>
                                  <label class="form-check-label" for="form2Example3">
                                    I agree all statements in <a href="#!">Terms of service</a>
                                  </label>
                                </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                  <button type="submit" id="reg" style=" background-color: #353d60;display: block;" class="btn text-white   btn-lg" disabled>Register</button>
                                  <button type="submit" id="reg1" style=" background-color: #353d60;display: none;" class="btn text-white   btn-lg" >Register</button>

                                </div>


                  </form>


                </div>
                <!-- <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div> -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>








