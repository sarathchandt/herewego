<script>
  function validatepass(){
    
    let pass= document.querySelector("#pass").value;
    let rpass= document.querySelector("#rpass").value;

    if (pass==rpass) {
      
      document.querySelector("#reg").style.display="none";
      document.querySelector("#reg1").style.display="block";
    }else{
      
      document.querySelector("#reg1").style.display="none";
      document.querySelector("#reg").style.display="block";
    }
  }
</script>

</body>


</html>